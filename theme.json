{
    "version": 2,
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "settings": {
        "appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
        "color":{
            "palette": [
                {
                    "color": "#FFFFFF",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#101010",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#AAAAAA",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color":"transparent",
                    "name":"Transparent",
                    "slug": "transparent"
                }
            ]
        },
		"layout": {
			"contentSize": "620px",
			"wideSize": "1000px"
		},
		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"]
		},
        "typography": {
            "fontSizes": [
                {
                    "fluid":{
                        "min": "0.75rem",
                        "max": "1rem"
                    },
                    "name": "Small",
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "fluid":{
                        "min": "1.25rem",
                        "max": "1.5rem"
                    },
                    "name": "Medium",
                    "size": "1.5rem",
                    "slug": "medium"
                },
                {
                    "fluid":{
                        "min": "1.75rem",
                        "max": "2rem"
                    },
                    "name": "Large",
                    "size": "2rem",
                    "slug": "large"
                },
                {
                    "fluid":{
                        "min": "2rem",
                        "max": "2.5rem"
                    },
                    "name": "X Large",
                    "size": "2.5rem",
                    "slug": "x-large"
                },
                {
                    "fluid":{
                        "min": "2.5rem",
                        "max": "3rem"
                    },
                    "name": "XX Large",
                    "size": "3rem",
                    "slug": "xx-large"
                }
            ],
            "fontFamilies": [
                {
                "fontFace": [
                    {
                        "fontFamily": "Inter",
                        "fontStyle": "normal",
                        "fontWeight": "400",
                        "src": [
                            "file:./assets/fonts/inter-400.woff2"
                        ]
                    },
                    {
                        "fontFamily": "Inter",
                        "fontStyle": "medium",
                        "fontWeight": "500",
                        "src": [
                            "file:./assets/fonts/inter-500.woff2"
                        ]
                    },
                    {
                        "fontFamily": "Inter",
                        "fontStyle": "semi-bold",
                        "fontWeight": "600",
                        "src": [
                            "file:./assets/fonts/inter-600.woff2"
                        ]
                    },
                    {
                        "fontFamily": "Inter",
                        "fontStyle": "bold",
                        "fontWeight": "700",
                        "src": [
                            "file:./assets/fonts/inter-700.woff2"
                        ]
                    }
                ],
                "fontFamily": "\"Inter\", sans-serif",
                "name": "Inter",
                "slug": "inter"
            }
            ]
        }
    },
    "styles": {
        "color": {
            "background":"var(--wp--preset--color--base",
            "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)"
        },
        "spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"top": "var(--wp--preset--spacing--50)",
				"bottom": "var(--wp--preset--spacing--50)",
				"right": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontSize": "var(--wp--preset--font-size--xx-large)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            }
        }
    }
}